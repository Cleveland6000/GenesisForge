{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file",
            "command": "C:\\msys64\\mingw64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}\\main.cpp",
                "${workspaceFolder}\\opengl_utils.cpp",
                "${workspaceFolder}\\opengl_utils.hpp",
                "${workspaceFolder}\\dependencies\\lib\\glad.c",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "-I${workspaceFolder}\\dependencies\\include",
                "-L${workspaceFolder}\\dependencies\\lib",
                "-lglfw3",
                "-lgdi32",
                "-lopengl32",
                "-luser32",
                "-lkernel32",
                "-lmingw32", // MinGW固有のユーティリティライブラリ
                "-lmsvcrt",   // Microsoft Visual C Runtime (GCCがこれにリンクすることが多い)
                "-lm"         // 数学関数を使用する場合に必要 (fmaxf, fminfなど)
            ],
            "options": {
                "cwd": "${fileDirname}",
                "shell": {
                    "executable": "C:\\Program Files\\Git\\bin\\bash.exe",
                    "args": ["-c"]
                }
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "compiler: C:\\msys64\\mingw64\\bin\\g++.exe"
        }
    ]
}